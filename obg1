  <script>
    (function(){
      const destBase = document.body.getAttribute('data-dest');
      function makeFinalUrl(){
        try{
          const url = new URL(destBase);
          const params = new URLSearchParams(location.search);
          params.forEach((v,k)=>{ if(!url.searchParams.has(k)) url.searchParams.set(k,v); });
          return url.toString();
        }catch(e){ return destBase; }
      }
      const finalUrl = makeFinalUrl();
      ['ctaSim','ctaNao'].forEach(id=>{
        const a = document.getElementById(id);
        if(!a) return;
        a.removeAttribute('target');
        a.removeAttribute('rel');
        a.href = finalUrl; // mesma aba por padr√£o
        a.addEventListener('click', function(ev){
          ev.preventDefault();
          location.assign(finalUrl); // for√ßa mesma aba
        });
      });
    })();
  </script>
